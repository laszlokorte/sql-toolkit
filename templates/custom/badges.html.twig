<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>Badges {{- conference.name -}}</title>
	<style media="screen">
		.badge-page, .cover {
			display: none;
		}

		.print-msg {
			margin-top: 4em;
			font-size: 1.5em;
			text-align: center;
		}
	</style>
	<style media="print">
		.print-msg {
			display: none;
		}
		.cover {
			page-break-after: always;
			position: relative;
		}

		.title {
			top: 40%;
			left: 0;
			right: 0;
			text-align: center;
		}

		.badge-page {
			page-break-before: always;
			page-break-inside: avoid;
			width: 100%;
			height: 100%;
			position: relative;
		}

		.badge {
			font-size: 1.8em;
			position: absolute;
			bottom: 4cm;
			text-align: center;
			top: 15cm;
		}

		.badge-left {
			left: 1cm;
			right: 50%;
		}

		.badge-right {
			right: 1cm;
			left: 50%;
		}

		.qr {
			margin: 0.5cm;
			width: 5cm;
			height: 5cm;
			image-rendering: pixelated;
		}

		svg {
			margin: 1cm;
		}
	</style>
</head>
<body>
	<div class="print-msg">
		Please Chose File -> Print
	</div>
	<div class="cover">
		<div class="title">
			<h1>{{- conference.name -}} Badges</h1>
			<h2>{{- date|date('d.m.Y H:i') -}}</h2>
			<p>({{- registrations|length -}} Badges)</p>
		</div>
	</div>

	{% macro svgQR(id, data, pixelSize = 5, color = 'black') %}
		<svg width="{{- data|length * pixelSize -}}" height="{{- data|length * pixelSize -}}" style="display: none;">
			<defs>
				<g id="{{id}}">
					{%- for y, row in data -%}
					    {%- for x, col in row -%}
					        {%- if col -%}
								<rect x="{{x * pixelSize}}" y="{{y * pixelSize}}" width="{{pixelSize}}" height="{{pixelSize}}" fill="{{color}}" />
					        {%- endif -%}
					    {%- endfor -%}
					{%- endfor -%}
				</g>
			</defs>
		</svg>
	{% endmacro %}

	{% for reg in registrations %}
		{% set qr = reg.id | qrcode %}

	    <div class="badge-page">
	    	{{- _self.svgQR(reg.id, qr) | raw -}}

	    	<div class="badge badge-left">
				<svg width="105" height="105"><use x="0" y ="0" href="#{{reg.id}}" /></svg>
	    		<div>{{ reg.first_name }} {{ reg.last_name }}</div>
	    	</div>
	    	<div class="badge badge-right">
	    		<svg width="105" height="105"><use x="0" y ="0" href="#{{reg.id}}" /></svg>
	    		<div>{{ reg.first_name }} {{ reg.last_name }}</div>
	    	</div>
	    	<br style="page-break-after: always;">
	    </div>
	{% endfor %}
</body>
</html>